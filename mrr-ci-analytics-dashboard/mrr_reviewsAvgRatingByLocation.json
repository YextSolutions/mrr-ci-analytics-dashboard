{
    "$id": "mrr_reviewsAvgRatingByLocation",
    "$schema": "https://schema.yext.com/config/analytics/insight/v1",
    "name": "Reviews and Average Rating by Entity",
    "description": "Reviews and Average Rating by Entity",
    "query": {
      "metrics": [
        "yext/NEW_REVIEWS",
        "yext/AVERAGE_RATING"
      ],
      "fields": [
        "entityId",
        "name",
        "address"
      ],
      "dimensions": [
        "yext/ENTITIES"
      ]
    },
    "display": {
      "table": {
        "sort": {
          "column": {
            "metric": "yext/AVERAGE_RATING"
          },
          "descending": true
        }
      }
    }
  }